<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo_springsecurity.Dao.UserMapper">

    <select id="loadUserByUsername" parameterType="string" resultType="com.example.demo_springsecurity.Model.User">
       select * from user where user_name = #{userName}
    </select>
    <select id="getUserRolesByUid" parameterType="int" resultType="com.example.demo_springsecurity.Model.Role">
       select * from  role r, user_role ur where  r.id = ur.role_id and  ur.user_id = #{id}
    </select>

</mapper>